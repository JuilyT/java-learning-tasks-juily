package org.multithreading.part2;

import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;
import java.util.HashSet;
import java.util.Set;

public class CommonFileReader {
	public static void readFiles(FileFormatType formatType) {
		Set<String> lines = readFileIntoList(formatType);			
		WikiReader wiki = new WikiReader();
		//wiki.generateWikiFiles(lines);
	}
	
	public static Set<String> readFileIntoList(FileFormatType fileFormat) {
		Set<String> lines = new HashSet<>();
		try {
			BufferedReader reader = new BufferedReader(
					new FileReader("/home/juilykumari/Downloads/"+fileFormat.getFileName()));
			String line;
			reader.readLine();
			while ((line = reader.readLine()) != null) {
				String[] values = line.split(fileFormat.getDelimiter());
			      for (String str : values) {
			        if(str.length()>0)
			        {
			        	System.out.println(str);
			        	lines.add(str.trim());
			        }
			      }
			}
			reader.close();
		} catch (IOException e) {
		    e.printStackTrace();
		}
		return lines;
	}
	public static void main(String[] args) {
		readFiles(FileFormatType.LINE_SEPARATED);
	}
}
